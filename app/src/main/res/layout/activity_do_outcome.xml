<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.mamasdelrio.android.DoOutcomeActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <org.mamasdelrio.android.widget.DniOrNameView
        android:id="@+id/outcome_dniorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.SelectCommunityView
        style="@style/spacers"
        android:id="@+id/outcome_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/content_outcome_choose_outcome" />

    <org.mamasdelrio.android.widget.LocationView
        style="@style/spacers"
        android:id="@+id/outcome_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.ComplicationsView
        style="@style/spacers"
        android:id="@+id/outcome_complications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.AbortionView
        style="@style/spacers"
        android:id="@+id/outcome_abortion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.DeathView
        style="@style/spacers"
        android:id="@+id/outcome_babydeath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <org.mamasdelrio.android.widget.DeathView
        style="@style/spacers"
        android:id="@+id/outcome_motherdeath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        style="@style/spacers"
        android:id="@+id/outcome_send"
        android:text="@string/send_to_whatsapp_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </LinearLayout>

</ScrollView>
